<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/wshospital3</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123</property>
		<property name="hibernate.connection.provider_class">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/orm/Actividad.hbm.xml" />
		<mapping resource="ormmapping/orm/Box.hbm.xml" />
		<mapping resource="ormmapping/orm/Certificado.hbm.xml" />
		<mapping resource="ormmapping/orm/Diagnostico.hbm.xml" />
		<mapping resource="ormmapping/orm/DirectorHospital.hbm.xml" />
		<mapping resource="ormmapping/orm/Especialidad.hbm.xml" />
		<mapping resource="ormmapping/orm/Establecimiento.hbm.xml" />
		<mapping resource="ormmapping/orm/Hce.hbm.xml" />
		<mapping resource="ormmapping/orm/HoraMedica.hbm.xml" />
		<mapping resource="ormmapping/orm/Medico.hbm.xml" />
		<mapping resource="ormmapping/orm/Paciente.hbm.xml" />
		<mapping resource="ormmapping/orm/Persona.hbm.xml" />
		<mapping resource="ormmapping/orm/Procedimiento.hbm.xml" />
		<mapping resource="ormmapping/orm/Rce.hbm.xml" />
		<mapping resource="ormmapping/orm/Reporte.hbm.xml" />
		<mapping resource="ormmapping/orm/Reserva.hbm.xml" />
		<mapping resource="ormmapping/orm/TipoReporte.hbm.xml" />
	</session-factory>
</hibernate-configuration>
